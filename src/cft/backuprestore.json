{
"AWSTemplateFormatVersion": "2010-09-09",
"Description": "Create Policy for backup restore",
"Parameters" : {
    "S3BucketARN" : {
        "Type" : "String",
        "Default": "masperf29sep630pm",
        "Description" : "ARN of S3 Bucket to be used for backup/restore e.g. arn:aws:s3:::masperf29sep630pm"
    },
    "Folder" : {
        "Type" : "String",
        "Default": "manage",
        "Description" : "Folder name to hold database backup file"
    }
},
"Resources": 
{
  "S3BackupRestorePolicy": 
  {
    "Type": "AWS::IAM::ManagedPolicy",
    "Properties": 
    {
        "PolicyDocument": {
        "Version": "2012-10-17",
        "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                    "s3:ListBucket",
                    "s3:GetBucketLocation"
            ],
            "Resource": [
                { "Ref" : "S3BucketARN" }
            ]
        },
        {
            "Effect": "Allow",
            "Action": [
                "s3:GetObjectMetaData",
                "s3:GetObject",
                "s3:PutObject",
                "s3:ListMultipartUploadParts",
                "s3:AbortMultipartUpload"
            ],
            "Resource": [
                "Fn::Sub": [
                    "${Bucket}/${Folder}/*",
                    {
                      "Bucket": {
                        "Ref": "S3BucketARN"
                      },
                      "Folder":{
                        "Ref": "Folder"
                      }
                    }
                ]
            ]
        }
           ]
        }
    }
 }
}
}